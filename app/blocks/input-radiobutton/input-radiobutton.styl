.input-radiobutton
	position relative
	margin-left 20px
	&:first-of-type
		margin-left 0
	&__label
		position relative
		padding-left 35px
		font-size 20px
		font-weight 700
		line-height 25px
		cursor pointer
		&::before
			position absolute
			display block
			content ''
			sprite($radiobutton)
	&__input
		display none
		&:checked + .input-radiobutton__label::before
			sprite($radiobutton_checked)
