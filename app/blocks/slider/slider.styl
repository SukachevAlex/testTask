.slider
	position relative
	margin-left 1px
	padding-top 31px
	cursor move
	&__line
		sprite($slider_line)
		width auto
		background-size cover
	&__pointer
		sprite($slider_pointer)
		position absolute
		top 8px
		left 80%
	&__separators
		position relative
		margin-top 3px
	&__separator
		position absolute
		top 0
		width 100%
		max-width 175px
		&:first-of-type
			left 0
		&:nth-of-type(2)
			left 19%
		&:nth-of-type(3)
			left 47.7%
		&:last-of-type
			left 77.7%
			text-align right
	&__separator-name
		font-size 13px
		font-weight 700
		color #2f1b15
	&__subtitle
		margin-top -4px
